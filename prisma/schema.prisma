generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERADMIN
  ADMIN
  COORDINATOR
  USER
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  name      String?
  email     String?  @unique
  phone     String?
  image     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventStage {
  ONSTAGE
  OFFSTAGE
}

model Event {
  id          String @id @default(uuid())
  title       String
  description String

  stage     EventStage @default(OFFSTAGE)
  date      DateTime
  poster    String
  groupSize String
  slotCount Int?
  archived  Boolean    @default(false)

  price      String
  discount   String?
  finalPrice String?

  coordinatorsId String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
